<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progressDrawable="@drawable/horizontal_progress" />

    <com.beihui.market.view.BusinessWebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="@dimen/tool_bar_content_inset_left"
        app:contentInsetRight="0dp"
        app:contentInsetStart="@dimen/tool_bar_content_inset_left">

        <ImageView
            android:id="@+id/navigate"
            style="@style/ToolBarIconStyle"
            android:src="@mipmap/left_arrow_white" />

        <ImageView
            android:id="@+id/close"
            style="@style/ToolBarIconStyle"
            android:layout_marginLeft="@dimen/tool_bar_icon_margin"
            android:src="@drawable/close_white" />

        <TextView
            android:id="@+id/title"
            style="@style/ToolBarTitleTextAppearance.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的积分" />

        <TextView
            android:id="@+id/explain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:minWidth="@dimen/tool_bar_height"
            android:text="说明"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.Toolbar>
</FrameLayout>