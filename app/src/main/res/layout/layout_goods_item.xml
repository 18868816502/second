<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_goods_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_white_r4"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="#下款推荐#"
        android:textColor="@color/black_1"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_goods_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:lineSpacingExtra="3.5dp"
        android:maxLines="4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black_2"
        android:textSize="10dp"
        tools:text="已帮助11789人成功下款！" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_goods_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/black_2"
            android:textSize="10dp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="13dp"
            android:background="@drawable/bg_stroke_line"
            android:gravity="center"
            android:text="专题"
            android:textColor="#d3d4d5"
            android:textSize="9dp" />
    </LinearLayout>
</LinearLayout>