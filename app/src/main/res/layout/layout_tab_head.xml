<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/bga_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_pro_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/ic_logo_yiren"
            android:gravity="center_horizontal"
            android:text="高通过率" />

        <TextView
            android:id="@+id/tv_pro_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/ic_logo_yiren"
            android:gravity="center_horizontal"
            android:text="闪电到账" />

        <TextView
            android:id="@+id/tv_pro_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/ic_logo_yiren"
            android:gravity="center_horizontal"
            android:text="不查征信" />

        <TextView
            android:id="@+id/tv_pro_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/ic_logo_yiren"
            android:gravity="center_horizontal"
            android:text="大额低息" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考拉\n头条" />

        <com.beihui.market.loan.ADTextView
            android:id="@+id/adt_looper"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/state_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="爆款推荐" />
</LinearLayout>