<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/bga_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:banner_indicatorGravity="bottom|right"
        app:banner_pointContainerBackground="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/tv_pro_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_btn1"
            android:gravity="center_horizontal"
            android:text="新品推荐" />

        <TextView
            android:id="@+id/tv_pro_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_btn2"
            android:gravity="center_horizontal"
            android:text="闪电到账" />

        <TextView
            android:id="@+id/tv_pro_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_btn3"
            android:gravity="center_horizontal"
            android:text="不查征信" />

        <TextView
            android:id="@+id/tv_pro_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_btn4"
            android:gravity="center_horizontal"
            android:text="大额低息" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/c_f7f7f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_loop_left" />

        <com.beiwo.klyjaz.loan.ADTextView
            android:id="@+id/adt_looper"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#fafafa" />

    <FrameLayout
        android:id="@+id/state_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#fafafa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_bill_over_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="爆款推荐"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Hot Product"
            android:textColor="@color/c_e7e7e7"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>