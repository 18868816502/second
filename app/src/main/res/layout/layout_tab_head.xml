<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.beiwo.klyjaz.view.BannerLayout
        android:id="@+id/banner_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:indicatorMargin="15dp"
        app:indicatorPosition="rightBottom"
        app:indicatorShape="oval_rect"
        app:indicatorSpace="2.5dp"
        app:indicator_selected_stroke="true"
        app:selectedIndicatorColor="@color/white"
        app:selectedIndicatorHeight="6dp"
        app:selectedIndicatorWidth="6dp"
        app:unSelectedIndicatorColor="@color/white"
        app:unSelectedIndicatorHeight="2.2dp"
        app:unSelectedIndicatorWidth="5.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="16dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/tv_pro_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_btn1"
            android:gravity="center_horizontal"
            android:text="新品推荐"
            android:textColor="@color/black_1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_pro_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_btn5"
            android:gravity="center_horizontal"
            android:text="下款推荐"
            android:textColor="@color/black_1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_pro_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_btn2"
            android:gravity="center_horizontal"
            android:text="闪电到账"
            android:textColor="@color/black_1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_pro_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home_btn6"
            android:gravity="center_horizontal"
            android:text="不查征信"
            android:textColor="@color/black_1"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/c_f7f7f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_loop_left" />

        <com.beiwo.klyjaz.loan.ADTextView
            android:id="@+id/adt_looper"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#fafafa" />
</LinearLayout>