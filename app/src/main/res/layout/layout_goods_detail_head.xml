<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_detail_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black_1"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_detail_icon"
            tools:text="水象分期" />

        <TextView
            android:id="@+id/tv_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:textColor="@color/black_2"
            android:textSize="11dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_detail_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_name"
            tools:text="99秒到账，老客额度翻倍，包下款" />

        <TextView
            android:id="@+id/tv_detail1_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="额度范围"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_icon" />

        <TextView
            android:id="@+id/tv_detail2_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="期限范围"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail1_left" />

        <TextView
            android:id="@+id/tv_detail3_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="利率说明"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail2_left" />

        <TextView
            android:id="@+id/tv_detail4_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="放款速度"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail3_left" />

        <TextView
            android:id="@+id/tv_detail5_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="审核方式"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail4_left" />

        <TextView
            android:id="@+id/tv_detail6_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="征信要求"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail5_left" />

        <TextView
            android:id="@+id/tv_detail1_range_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_icon"
            tools:text="1000-5000元" />

        <TextView
            android:id="@+id/tv_detail2_range_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail1_left"
            tools:text="14天" />

        <TextView
            android:id="@+id/tv_detail3_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail2_left"
            tools:text="0.03%" />

        <TextView
            android:id="@+id/tv_detail4_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail3_left"
            tools:text="10分钟" />

        <TextView
            android:id="@+id/tv_detail5_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail4_left"
            tools:text="人工审核" />

        <TextView
            android:id="@+id/tv_detail6_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail5_left"
            tools:text="无" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/line_color" />
</LinearLayout>