<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@mipmap/home_big_pic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/mine_bg_blue"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tool_bar_height">

                    <ImageView
                        android:id="@+id/contact_kefu"
                        style="@style/ToolBarIconStyle"
                        android:src="@drawable/mine_contact_kefu" />

                    <ImageView
                        android:id="@+id/mine_msg"
                        style="@style/ToolBarIconStyle"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/mine_message" />
                </android.support.v7.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <View
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@mipmap/mine_head_shadow_icon" />

                        <com.beihui.market.view.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_head_icon" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="@string/login_now"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_product_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/round_white_shadow"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="9dp">

                <FrameLayout
                    android:id="@+id/mine_product"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_bankcard"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/my_product"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_white_shadow"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="9dp">

                <FrameLayout
                    android:id="@+id/my_collection"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_collect_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/my_collection"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <FrameLayout
                    android:id="@+id/reward_points"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_reward_points"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/reward_points"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black_2"
                        android:textSize="12sp" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <FrameLayout
                    android:id="@+id/invite_friend"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_friend_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/invite_friend"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_white_shadow"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="9dp">

                <FrameLayout
                    android:id="@+id/helper_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_help_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/help_feedback"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <FrameLayout
                    android:id="@+id/wechat_public"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_we_chat_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/wechat_public"
                        android:textColor="@color/black_1"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/wechat_surprise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="这里能借好多好多钱"
                            android:textColor="@color/black_2"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/mine_wechat_light" />
                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <FrameLayout
                    android:id="@+id/settings"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_setting_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/settings"
                        android:textColor="@color/black_1"
                        android:textSize="14sp" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>
