<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="RtlHardcoded">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tool_bar_height">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical">

                        <ImageView
                            android:id="@+id/mine_msg"
                            style="@style/ToolBarIconStyle"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/mine_message" />

                        <TextView
                            android:id="@+id/tv_message_num"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignRight="@+id/mine_msg"
                            android:background="@drawable/round_red"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/white"
                            android:textSize="9sp" />

                    </RelativeLayout>


                </android.support.v7.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_1"
                            android:textSize="25sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_now"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textColor="@color/black_1"
                            android:textSize="25sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp">

                        <View
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:background="@mipmap/mine_head_shadow_icon" />

                        <com.beihui.market.view.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_head_icon" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_product_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/round_white_shadow"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="9dp"
                android:visibility="gone">

                <FrameLayout
                    android:id="@+id/mine_bill"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_bankcard"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="我的账单"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <FrameLayout
                    android:id="@+id/my_collection"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_collect_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/my_collection"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/invite_friend"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_friend_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/invite_friend"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/settings"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_setting_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/settings"
                        android:textColor="@color/black_1"
                        android:textSize="14sp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/helper_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_help_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/help_feedback"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/reward_points"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_reward_points"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/reward_points"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black_2"
                        android:textSize="12sp" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/wechat_public"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_list_we_chat_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/wechat_public"
                        android:textColor="@color/black_1"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/wechat_surprise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="这里能借好多好多钱"
                            android:textColor="@color/black_2"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            android:src="@drawable/mine_wechat_light" />
                    </LinearLayout>

                </FrameLayout>

ss
                <FrameLayout
                    android:id="@+id/contact_kefu"
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mine_service_icon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/right_icon"
                        android:gravity="center_vertical"
                        android:text="@string/my_kefu"
                        android:textColor="@color/black_1"
                        android:textSize="15sp" />



                </FrameLayout>



            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</FrameLayout>
