<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp136"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:orientation="horizontal">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/praise_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/rl_praise"
            android:layout_width="@dimen/dp60"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp20">
            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp44"
                android:src="@mipmap/ic_launcher"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_praise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999+"
                android:textSize="@dimen/sp10"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_system_message_num_tips"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞"
            android:textColor="@color/black_1"
            android:textSize="@dimen/sp14"
            app:layout_constraintTop_toBottomOf="@+id/rl_praise"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp10"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/comment_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="@dimen/dp60"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp20">
            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp44"
                android:src="@mipmap/ic_launcher"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999+"
                android:textSize="@dimen/sp10"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_system_message_num_tips"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textColor="@color/black_1"
            android:textSize="@dimen/sp14"
            app:layout_constraintTop_toBottomOf="@+id/rl_comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp10"/>

    </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp36"
        android:background="@color/colorBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统消息"
            android:textSize="@dimen/sp14"
            android:textColor="@color/black_2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp15"/>
        <ImageView
            android:id="@+id/message_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp10"
            android:src="@mipmap/message_more_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>