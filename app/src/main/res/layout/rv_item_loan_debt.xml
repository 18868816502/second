<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            tools:background="@android:color/white">


            <com.beiwo.klyjaz.view.CircleImageView
                android:id="@+id/channel_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:civ_border_color="@color/line"
                app:civ_border_width="0.5dp"/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="15sp"
                    tools:text="爱信钱包" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/debt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black_2"
                    android:textSize="11sp"
                    tools:text="待还金额1200元" />
            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/home_forward"
                android:gravity="center_vertical|right"
                android:textColor="@color/black_1"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:visibility="invisible"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="#909298"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </FrameLayout>


    <FrameLayout
        android:visibility="gone"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="#808080">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/show_hide" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="首页显示"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </FrameLayout>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>