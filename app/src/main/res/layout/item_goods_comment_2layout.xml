<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="综合评价"
        android:textColor="@color/black_1"
        android:textSize="@dimen/dp12"
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_com"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/eva_type_container01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp23"
            android:paddingBottom="@dimen/dp28"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_evaluate01"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:background="@drawable/icon_goods_pos_selected"/>
            <TextView
                android:id="@+id/tv_evaluate01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp11"
                android:textColor="@color/black_2"
                android:layout_marginTop="@dimen/dp14"
                android:text="好评"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/eva_type_container02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp23"
            android:paddingBottom="@dimen/dp28"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_evaluate02"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:background="@drawable/icon_goods_neg_unselected"/>
            <TextView
                android:id="@+id/tv_evaluate02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp11"
                android:textColor="@color/black_2"
                android:layout_marginTop="@dimen/dp14"
                android:text="中评"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/eva_type_container03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp23"
            android:paddingBottom="@dimen/dp28"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_evaluate03"
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:background="@drawable/icon_goods_neg_unselected"/>
            <TextView
                android:id="@+id/tv_evaluate03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp11"
                android:textColor="@color/black_2"
                android:layout_marginTop="@dimen/dp14"
                android:text="差评"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/c_fffafafa" />

    <TextView
        android:id="@+id/tv_loan_eva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否借到"
        android:textColor="@color/black_1"
        android:textSize="@dimen/dp12"
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="center_horizontal"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tag_flow_01"
        app:max_select="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp15">
    </com.zhy.view.flowlayout.TagFlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/c_fffafafa"
        android:layout_marginTop="@dimen/dp20"/>

</LinearLayout>