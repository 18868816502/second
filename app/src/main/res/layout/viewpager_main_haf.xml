<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fadeScrollbars="false"
    android:focusable="true"
    android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10">

            <RelativeLayout
                android:id="@+id/HAF_Dynamic_Layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/HAF_Dynamic_Mortgage_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/HAF_MortgageTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="贷款金额（万元）"
                        android:textSize="16sp"
                        android:textColor="@color/black_1"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.4"/>

                    <EditText
                        android:id="@+id/HAF_MortgageEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingRight="15dp"
                        android:inputType="numberDecimal"
                        android:hint="请输入贷款金额"
                        android:textSize="14sp"
                        android:textColor="@color/black_1"
                        android:imeOptions="actionDone"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"/>

                </LinearLayout>
                
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_ffe8e8e8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/HAF_TimeLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/HAF_TimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款年限（年）"
                    android:textSize="16sp"
                    android:textColor="@color/black_1"
                    android:layout_gravity="center_vertical"/>

                <RelativeLayout
                    android:id="@+id/rl_gjj_year_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right|center_vertical">
                        <TextView
                            android:id="@+id/tv_gjj_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30年(360期)"
                            android:gravity="right"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/icon_come"/>
                    </LinearLayout>
                    
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_ffe8e8e8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/HAF_RateLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款利率(%)"
                    android:textSize="16sp"
                    android:textColor="@color/black_1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(最新公积金贷款利率：3.25%)"
                    android:textSize="13sp"
                    android:textColor="#556677"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/ll_gjj_rate_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:id="@+id/tv_gjj_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基准利率(4.90%)"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_come"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_ffe8e8e8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/HAF_PaybackMethod_Layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款方式"
                    android:textSize="16sp"
                    android:textColor="@color/black_1"
                    android:layout_gravity="center_vertical"/>

                <Spinner
                    android:id="@+id/HAF_PaybackMethod_Spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:visibility="gone">
                </Spinner>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical">
                    <LinearLayout
                        android:id="@+id/ll_haf_payback_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/iv_haf_payback_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_on"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="等额本息"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_haf_payback_principal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp">
                        <ImageView
                            android:id="@+id/iv_haf_payback_principal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="等额本金"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_ffe8e8e8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>
</ScrollView>