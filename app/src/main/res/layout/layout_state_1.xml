<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="12dp"
        android:background="@mipmap/home_borrow_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="借款金额(元)"
            android:textColor="@color/black_1"
            android:textSize="11dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp">

            <com.beiwo.klyjaz.tang.widget.CustomNumTextView
                android:id="@+id/tv_seekbar_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black_1"
                android:textSize="34dp"
                tools:text="2000" />

            <android.support.v4.widget.Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/iv_edit_money"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:padding="6.5dp"
                android:src="@drawable/ic_remark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/home_icon_time"
                android:drawablePadding="3dp"
                android:text="借款10天"
                android:textColor="#A5A9B2"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:drawableLeft="@mipmap/home_icon_charge"
                android:drawablePadding="3dp"
                android:text="服务费"
                android:textColor="#A5A9B2"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_service_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="58.8元"
                android:textColor="#A5A9B2"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="8dp"
                android:src="@mipmap/ic_bill_dout" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_go_loan"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@mipmap/home_btn"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:text="立即借钱"
        android:textColor="@color/white"
        android:textSize="17dp" />
</LinearLayout>