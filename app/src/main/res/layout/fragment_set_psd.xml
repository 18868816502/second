<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_set_pwd_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入验证码"
                android:textColor="@color/black_1"
                android:textSize="33sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码已发送至"
                    android:textColor="@color/black_2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_reset_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="137 7728 5555"
                    android:textColor="@color/black_2"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="验证码"
                android:textColor="@color/black_1"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.beihui.market.view.ClearEditText
                    android:id="@+id/verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/input_verify_code"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/c_222222"
                    android:textColorHint="#B2B2B2"
                    android:textSize="19sp" />


                <TextView
                    android:id="@+id/fetch_text"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_login_btn"
                    android:gravity="center"
                    android:text="@string/fetch"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="密码"
                android:textColor="@color/black_1"
                android:textSize="12sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.beihui.market.view.ClearEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/set_login_psd"
                    android:inputType="textPassword"
                    android:textColor="@color/c_222222"
                    android:textColorHint="#b3b3b3"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/psd_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:button="@drawable/eyes_check" />
            </LinearLayout>

            <TextView
                android:id="@+id/confirm"
                style="@style/TextButtonStyle"
                android:layout_marginTop="35dp"
                android:background="@drawable/round_login_btn"
                android:text="下一步"
                android:textColor="#50ffffff" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>