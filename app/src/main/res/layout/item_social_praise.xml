<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp165"
    android:background="@color/white"
    android:paddingTop="@dimen/dp15">

    <com.beiwo.qnejqaz.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"
        android:src="@drawable/mine_icon_head"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginStart="@dimen/dp8"
        android:text="艾斯代理"
        android:textColor="@color/black_1"
        android:textSize="@dimen/sp13"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:text="刚刚"
        android:textColor="@color/black_2"
        android:textSize="@dimen/sp13"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <TextView
        android:id="@+id/tv_praise_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintRight_toRightOf="parent"
        android:text="赞了你的评论赞了你的评论赞了你的评论赞了你的评论赞了你的评论"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="20"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/colorBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_praise_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_praise_type">

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="@dimen/dp47"
            android:layout_height="@dimen/dp47"
            android:layout_marginLeft="@dimen/dp8"
            android:scaleType="centerCrop"
            android:background="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="@dimen/dp8"
            android:text="信用记账放速来围观，不喜勿骂！芝麻分530以上秒过啦！"
            android:textColor="@color/black_2"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>