<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_detail_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/mine_bank_default_icon" />

            <!--网贷名称 或者 信用卡名称-->
            <TextView
                android:id="@+id/tv_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="招商银行"
                android:textColor="@color/black_1"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e8e8e8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="剩余负债（元）"
            android:textColor="@color/black_2"
            android:textSize="11dp" />

        <com.beihui.market.tang.widget.CustomNumTextView
            android:id="@+id/tv_still_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="￥2465.37"
            android:textColor="@color/black_1"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已清偿"
                    android:textColor="@color/black_2"
                    android:textSize="11dp" />

                <com.beihui.market.tang.widget.CustomNumTextView
                    android:id="@+id/tv_already_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="1154.31"
                    android:textColor="#28B088"
                    android:textSize="15dp" />
            </LinearLayout>

            <!--<View
                android:layout_width="0.8dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#e8e8e8" />
-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款期数"
                    android:textColor="@color/black_2"
                    android:textSize="11dp" />

                <com.beihui.market.tang.widget.CustomNumTextView
                    android:id="@+id/tv_cycle_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="1/3"
                    android:textColor="@color/black_1"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e8e8e8" />

        <TextView
            android:id="@+id/tv_add_remark"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_remark"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="好记性不如写备注~"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#d3d4d5"
            android:textColorHint="#d3d4d5"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/bg_gradient" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bill_over_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_bill_over"
        android:visibility="gone" />
</FrameLayout>