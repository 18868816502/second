<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/ll_ac_my_debt_tab_root"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/help_feed_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_normal_account_flow"
                android:layout_width="66dp"
                android:layout_height="29dp"
                android:background="@drawable/help_feed_left"
                android:gravity="center"
                android:text="通用"
                android:textColor="@drawable/x_account_flow_tab_selector" />

            <TextView
                android:id="@+id/tv_loan_account_flow"
                android:layout_width="66dp"
                android:layout_height="29dp"
                android:background="@drawable/help_feed_middle"
                android:layout_marginLeft="-1dp"
                android:layout_marginRight="-1dp"
                android:gravity="center"
                android:text="网贷"
                android:textColor="@drawable/x_account_flow_tab_selector" />

            <TextView
                android:id="@+id/tv_credit_card_flow"
                android:layout_width="66dp"
                android:layout_height="29dp"
                android:background="@drawable/help_feed_right"
                android:gravity="center"
                android:text="信用卡"
                android:textColor="@drawable/x_account_flow_tab_selector" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    
    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>