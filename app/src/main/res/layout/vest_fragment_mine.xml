<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical">

            <ImageView
                android:id="@+id/mine_msg"
                style="@style/ToolBarIconStyle"
                android:layout_marginRight="15dp"
                android:src="@drawable/mine_message" />

            <TextView
                android:id="@+id/tv_message_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignRight="@+id/mine_msg"
                android:background="@drawable/round_red"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="9sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_navigate_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <View
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:background="@drawable/mine_bg_head_shadow" />

                        <com.beiwo.klyjaz.view.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mine_icon_head"
                            app:civ_border_color="#ffffff"
                            app:civ_border_width="3dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_1"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_now"
                            android:textColor="@color/black_1"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_user_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="立即登录，开启记账旅程！"
                            android:textColor="@color/black_2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <com.beiwo.klyjaz.view.CardLayoutBar
                    android:id="@+id/my_loan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_image="@mipmap/vest_loan"
                    app:left_image_Visible="true"
                    app:left_textView_color="#292929"
                    app:left_textView_text="我的借款"
                    app:left_textView_textSize="15sp" />

                <com.beiwo.klyjaz.view.CardLayoutBar
                    android:id="@+id/bank_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_image="@mipmap/vest_bank_card"
                    app:left_image_Visible="true"
                    app:left_textView_color="#292929"
                    app:left_textView_text="我的银行卡"
                    app:left_textView_textSize="15sp" />


                <com.beiwo.klyjaz.view.CardLayoutBar
                    android:id="@+id/help_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_image="@drawable/mine_icon_help"
                    app:left_image_Visible="true"
                    app:left_textView_color="#292929"
                    app:left_textView_text="@string/help_center"
                    app:left_textView_textSize="15sp" />

                <com.beiwo.klyjaz.view.CardLayoutBar
                    android:id="@+id/settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    app:left_image="@drawable/mine_icon_setting"
                    app:left_image_Visible="true"
                    app:left_textView_color="#292929"
                    app:left_textView_text="@string/settings"
                    app:left_textView_textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>