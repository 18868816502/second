<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_container">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/navigate"
            style="@style/ToolBarIconStyle"
            android:src="@mipmap/left_arrow_black"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="放贷计算器"
            android:textSize="16sp"
            android:textColor="@color/black_1"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingTop="5dp"
        android:layout_below="@id/tool_bar"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/tab_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等额本息"
                android:textSize="14sp"
                android:textColor="@color/c_ff5240"
                android:gravity="center"
                android:layout_weight="1"/>
            <View
                android:id="@+id/indicate_left"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="14dp"
                android:background="@color/c_ff5240"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等额本金"
                android:textColor="@color/c_909298"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"/>
            <View
                android:id="@+id/indicate_right"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="14dp"
                android:background="@color/c_ff5240"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/layout"
        android:background="@color/colorBackground"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/layout">
    </android.support.v4.view.ViewPager>

</RelativeLayout>