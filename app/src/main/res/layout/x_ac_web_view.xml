<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_news_header_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_tab_fg_news_web_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:src="@mipmap/ic_bakc_normal" />

        <TextView
            android:id="@+id/tv_web_view_title"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black_1"
            android:textSize="17sp" />

    </android.support.v7.widget.Toolbar>

    <com.beiwo.klyjaz.view.BusinessWebView
        android:id="@+id/bwv_news_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />
</LinearLayout>