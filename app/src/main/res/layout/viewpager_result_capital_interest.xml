<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_month_pay_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="月供(元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_sum_interest_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="利息总额(万元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_sum_payback_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="还款总额(万元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_LoanSum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款总额:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_LoanSum_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_PaySum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款总额:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ViewPager_CapitalInterest_LoanSum_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_PaySum_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterest_LoanSum_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_MonthPay_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每月还款:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ViewPager_CapitalInterest_PaySum_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_MonthPay_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterest_PaySum_TextView"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_Month_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款月数:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_Month_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_Interest_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付利息:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/ViewPager_CapitalInterest_Month_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterest_Interest_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterest_Month_TextView"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorBackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="期数"
            android:textColor="@color/black_2"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="偿还本金"
            android:textColor="@color/black_2"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="偿还利息"
            android:textColor="@color/black_2"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="月供"
            android:textColor="@color/black_2"
            android:textSize="12sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <com.beihui.market.view.dialog.LoanListView
        android:id="@+id/listOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.beihui.market.view.dialog.LoanListView>
</LinearLayout>