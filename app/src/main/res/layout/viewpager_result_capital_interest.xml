<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_month_pay_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="月供(元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_sum_interest_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="利息总额(万元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_sum_payback_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="还款总额(万元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorBackground"/>

    <include layout="@layout/item_loan_result_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <com.beihui.market.view.dialog.LoanListView
        android:id="@+id/listOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.beihui.market.view.dialog.LoanListView>
</LinearLayout>