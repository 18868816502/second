<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_news_header_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_tab_fg_news_web_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:src="@mipmap/btn_back_normal_black"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/help_feed_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_tab_fg_news_web_title"
                android:layout_width="75dp"
                android:layout_height="29dp"
                android:background="@drawable/help_feed_left"
                android:gravity="center"
                android:text="发现"
                android:textColor="@drawable/x_account_flow_tab_selector" />

            <TextView
                android:id="@+id/iv_tab_fg_news_web_activity"
                android:layout_width="75dp"
                android:layout_height="29dp"
                android:layout_marginLeft="-1dp"
                android:background="@drawable/help_feed_right"
                android:gravity="center"
                android:text="活动"
                android:textColor="@drawable/x_account_flow_tab_selector" />
        </LinearLayout>

        <RelativeLayout
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/iv_tab_fg_news_web_user"
                android:src="@mipmap/mine_head"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_tab_news_red_dot"
                android:layout_alignParentRight="true"
                android:src="@drawable/xshape_tab_account_red_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <com.beihui.market.view.NoScrollViewPager
        android:id="@+id/fl_tab_news_web_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.beihui.market.view.NoScrollViewPager>

</LinearLayout>