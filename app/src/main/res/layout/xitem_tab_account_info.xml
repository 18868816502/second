<?xml version="1.0" encoding="utf-8"?><!--TODO 去掉数据-->
<com.beihui.market.view.CustomSwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_menu_layout"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <!--以此布局为基准-->
        <View
            android:id="@+id/iv_item_tab_account_base_line"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginLeft="70dp"
            android:background="@color/transparent"
            android:src="@drawable/xbill_time_icon" />


        <!--卡信息-->
        <LinearLayout
            android:id="@+id/ll_item_tab_account_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_item_tab_account_base_line"
            android:background="@drawable/xshape_tab_account_card_gray_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_item_tab_acount_set_pay_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="17dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="18dp">


                <com.beihui.market.view.CircleImageView
                    android:id="@+id/iv_item_tab_account_avatar"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true" />

                <!--网贷名称 或者 信用卡名称-->
                <TextView
                    android:id="@+id/tv_item_tab_acount_name_type"
                    android:layout_toRightOf="@id/iv_item_tab_account_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="招商银行"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <!--网贷名称 或者 信用卡名称金额-->
                <TextView
                    android:id="@+id/tv_item_tab_acount_loan_money"
                    android:layout_toRightOf="@id/iv_item_tab_account_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_tab_acount_name_type"
                    android:layout_marginTop="10dp"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_item_tab_acount_sample_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/tv_item_tab_acount_name_type"
                    android:src="@drawable/xbill_example_icon" />

                <!--&lt;!&ndash;箭头&ndash;&gt;-->
                <!--<ImageView-->
                    <!--android:id="@+id/iv_item_tab_acount_arrow"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:padding="10dp"-->
                    <!--android:src="@drawable/xbill_down_arrow" />-->

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_item_tab_acount_set_pay_bg"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/xshape_tab_account_card_pink_bg"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_item_tab_acount_all_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设为已还"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_tab_acount_part_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="还部分"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!--闹钟-->
        <ImageView
            android:id="@+id/iv_item_tab_account_clock"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/ll_item_tab_account_card"
            android:layout_marginLeft="63.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:src="@drawable/xbill_time_icon" />

        <!--逾期总数量-->
        <TextView
            android:id="@+id/iv_item_tab_account_overdue_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_item_tab_account_card"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="11dp"
            android:background="@color/white"
            android:text="逾期总数为10笔"
            android:textSize="12sp" />


        <!--还款日期-->
        <TextView
            android:id="@+id/tv_item_tab_account_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_tab_account_base_line"
            android:layout_marginRight="10dp"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@id/ll_item_tab_account_card"
            android:text="今天"
            android:textColor="@color/black_1"
            android:textSize="15sp" />

        <!--小红点-->
        <ImageView
            android:id="@+id/iv_item_tab_account_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_tab_account_base_line"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/xshape_tab_account_red_circle" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:paddingRight="10dp"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/tv_shape_tab_account_no_reply"
            android:background="@drawable/x_shape_tab_account_no_reply"
            android:text="还部分"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="44dp"
            android:layout_height="44dp" />

        <TextView
            android:id="@+id/tv_shape_tab_account_reply"
            android:background="@drawable/x_shape_tab_account_reply"
            android:text="设为已还"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textSize="12sp"
            android:layout_width="44dp"
            android:layout_height="44dp" />

    </LinearLayout>

</com.beihui.market.view.CustomSwipeMenuLayout>