<?xml version="1.0" encoding="utf-8"?><!--TODO 去掉数据-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_tab_account_normal_top_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:id="@+id/iv_item_tab_account_dot_root"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25.5dp">

            <!--小红点-->
            <ImageView
                android:id="@+id/iv_item_tab_account_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xshape_tab_account_red_circle" />

        </RelativeLayout>

        <!--还款日期-->
        <TextView
            android:id="@+id/tv_item_tab_account_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_item_tab_account_dot_root"
            android:text="今天"
            android:textColor="@color/black_1"
            android:textSize="12sp" />

        <!--共几笔-->
        <TextView
            android:id="@+id/tv_item_tab_account_count_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_item_tab_account_date_name"
            android:text=""
            android:textColor="@color/black_2"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_item_tab_account_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_tab_account_count_name"
            android:text=""
            android:textColor="@color/black_2"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_item_tab_account_count_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_tab_account_count"
            android:text="笔"
            android:textColor="@color/black_2"
            android:textSize="10sp" />

    </RelativeLayout>

    <com.beihui.market.view.CustomSwipeMenuLayout
        android:id="@+id/swipe_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:id="@+id/rl_item_tab_account_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--卡信息-->
            <LinearLayout
                android:id="@+id/ll_item_tab_account_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="65dp"
                android:background="@drawable/x_card_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/iv_item_tab_account_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <!--网贷名称 或者 信用卡名称-->
                        <TextView
                            android:id="@+id/tv_item_tab_acount_name_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="招商银行"
                            android:textColor="@color/black_1"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!--网贷名称 或者 信用卡名称-->
                        <TextView
                            android:id="@+id/tv_item_tab_acount_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black_2"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical|right"
                        android:orientation="vertical">

                        <!--网贷名称 或者 信用卡名称金额-->
                        <TextView
                            android:id="@+id/tv_item_tab_acount_loan_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/black_1"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_item_tab_acount_loan_term"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/x_tab_account_term_bg"
                            android:text="1/1"
                            android:textColor="@color/black_2"
                            android:textSize="9sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tv_shape_tab_account_no_reply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#595d64"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="部分"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已还"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_shape_tab_account_reply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ff5240"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设为"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已还"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_shape_tab_accoun_set_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ff5240"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设为"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未还"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </com.beihui.market.view.CustomSwipeMenuLayout>

</LinearLayout>