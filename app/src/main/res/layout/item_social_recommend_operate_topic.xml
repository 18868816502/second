<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/dp2"
    android:layout_marginRight="@dimen/dp2">
    
    <ImageView
        android:id="@+id/iv_topic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp114"
        android:contentDescription="@string/app_content_description"/>

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_topic"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:maxEms="20"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/sp14"
        android:textColor="@color/black_1"
        tools:text="法官被撤或者将再次推出审判，张莹莹律师啊撒旦克"/>

    <TextView
        android:id="@+id/tv_topic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_title"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:maxEms="50"
        android:ellipsize="end"
        android:maxLines="5"
        android:textSize="@dimen/sp14"
        android:textColor="@color/black_1"
        tools:text="法官被撤或者将再次推"
        android:visibility="gone"/>


    <com.beiwo.klyjaz.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:src="@drawable/about_kaola_logo"
        android:layout_marginTop="@dimen/dp17"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_content"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginStart="@dimen/sp10"
        android:textColor="@color/black_2"
        android:textSize="@dimen/sp10"
        tools:text="爱的木头"/>

    <TextView
        android:id="@+id/tv_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_social_topic_praise_unselect"
        android:drawableStart="@drawable/icon_social_topic_praise_unselect"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:drawablePadding="@dimen/dp6"
        tools:text="12"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp4"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintTop_toBottomOf="@+id/tv_praise"
        android:background="@color/colorBackground"/>

</android.support.constraint.ConstraintLayout>