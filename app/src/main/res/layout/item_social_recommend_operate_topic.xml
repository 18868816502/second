<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp168"
    android:layout_height="@dimen/dp210"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/dp5"
    android:layout_marginRight="@dimen/dp5">
    
    <ImageView
        android:id="@+id/iv_topic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp114"
        android:src="@drawable/x_tab_account_toolbar_bg"
        android:contentDescription="@string/app_content_description"/>

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_topic"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:textSize="@dimen/sp14"
        android:textColor="@color/black_1"
        android:text="法官被撤或者将再次推出审判，张莹莹律师..."/>

    <com.beihui.market.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:src="@drawable/about_kaola_logo"
        android:layout_marginTop="@dimen/dp17"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_title"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginStart="@dimen/sp10"
        android:textColor="@color/black_2"
        android:textSize="@dimen/sp10"
        android:text="爱的木头"/>

    <TextView
        android:id="@+id/tv_parise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/star_icon_black"
        android:drawableStart="@drawable/star_icon_black"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:drawablePadding="@dimen/dp6"
        android:text="12"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorBackground"/>

</android.support.constraint.ConstraintLayout>