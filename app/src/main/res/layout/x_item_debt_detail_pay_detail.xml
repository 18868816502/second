<?xml version="1.0" encoding="utf-8"?>
<!--网贷记账详情 快捷记账详情的 还款记录的Item-->
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_pay_detail_record"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:text="还款记录"
        android:textColor="#ff909298"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <View
        android:id="@+id/tv_item_pay_detail_under_line"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_pay_detail_content"
            android:gravity="center"
            android:text="还部分"
            android:textColor="#ff424251"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_item_pay_detail_date"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_item_pay_detail_content"
            android:gravity="center"
            android:text="03/26"
            android:textColor="#ff909298"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_item_pay_detail_money"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_pay_detail_content"
            android:text="1000"
            android:textColor="#ff424251"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>