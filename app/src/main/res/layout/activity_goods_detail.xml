<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/template_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_detail_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="水象分期"
            android:textColor="@color/black_1"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_detail_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:text="99秒到账，老客额度翻倍，包下款"
            android:textColor="@color/black_2"
            android:textSize="11dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_detail_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_name" />

        <TextView
            android:id="@+id/tv_detail1_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="额度范围"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_icon" />

        <TextView
            android:id="@+id/tv_detail2_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="期限范围"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail1_left" />

        <TextView
            android:id="@+id/tv_detail3_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="利率说明"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail2_left" />

        <TextView
            android:id="@+id/tv_detail4_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="放款速度"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail3_left" />

        <TextView
            android:id="@+id/tv_detail5_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="审核方式"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail4_left" />

        <TextView
            android:id="@+id/tv_detail6_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="征信要求"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail5_left" />


        <TextView
            android:id="@+id/tv_detail1_range_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="1000-5000元"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_icon" />

        <TextView
            android:id="@+id/tv_detail2_range_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="14天"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail1_left" />

        <TextView
            android:id="@+id/tv_detail3_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0.03%"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail2_left" />

        <TextView
            android:id="@+id/tv_detail4_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="10分钟"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail3_left" />

        <TextView
            android:id="@+id/tv_detail5_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="人工审核"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail4_left" />

        <TextView
            android:id="@+id/tv_detail6_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="无"
            android:textColor="@color/black_2"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail5_left" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/line_color" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="18dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/tv_comment_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品评价"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="(34798)"
            android:textColor="@color/black_2"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comment_left"
            app:layout_constraintLeft_toRightOf="@+id/tv_comment_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_come"
            app:layout_constraintBottom_toBottomOf="@+id/tv_comment_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_comment_left" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_comment_box"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment_left">

            <!--<TextView
                android:id="@+id/tv_comment_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87%" />

            <RatingBar
                android:id="@+id/rb_comment_progress"
                style="@style/rating_bar_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:stepSize="0.2"
                app:layout_constraintTop_toBottomOf="@+id/tv_comment_grade"
                tools:rating="1" />-->

            <TextView
                android:id="@+id/tv_good_comment_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评"
                android:textColor="@color/black_2"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_mid_comment_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="中评"
                android:textColor="@color/black_2"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_good_comment_left" />

            <TextView
                android:id="@+id/tv_bad_comment_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="差评"
                android:textColor="@color/black_2"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_mid_comment_left" />

            <TextView
                android:id="@+id/tv_good_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5772"
                android:textColor="@color/black_2"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_good_comment_left"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_good_comment_left" />

            <TextView
                android:id="@+id/tv_mid_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="2381"
                android:textColor="@color/black_2"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_mid_comment_left"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_mid_comment_left" />

            <TextView
                android:id="@+id/tv_bad_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="1274"
                android:textColor="@color/black_2"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_bad_comment_left"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_bad_comment_left" />

            <ProgressBar
                android:id="@+id/pb_bad_comment"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_bad_comment_left"
                app:layout_constraintLeft_toRightOf="@+id/tv_bad_comment_left"
                app:layout_constraintRight_toLeftOf="@+id/tv_bad_comment_num" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>