<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_account_flow_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height">


        <ImageView
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/x_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/help_feed_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_normal_account_flow"
                android:layout_width="66dp"
                android:layout_height="29dp"
                android:background="@drawable/help_feed_left"
                android:gravity="center"
                android:text="通用"
                android:textColor="@color/c_ff5240" />

            <TextView
                android:id="@+id/tv_loan_account_flow"
                android:layout_width="66dp"
                android:layout_height="29dp"
                android:background="@drawable/help_feed_middle"
                android:layout_marginLeft="-1dp"
                android:layout_marginRight="-1dp"
                android:gravity="center"
                android:text="网贷"
                android:textColor="@color/c_ff5240" />

            <TextView
                android:id="@+id/tv_credit_card_flow"
                android:layout_width="66dp"
                android:layout_height="29dp"
                android:background="@drawable/help_feed_right"
                android:gravity="center"
                android:text="信用卡"
                android:textColor="@color/c_ff5240" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <!--借款金额-->
    <LinearLayout
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/x_account_flow_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="12dp"
            android:text="借款"
            android:textColor="@color/black_1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="right"
                android:text="每期金额"
                android:textColor="@color/black_2"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.beihui.market.view.AutoAdjustSizeEditText
                android:id="@+id/auto_et_num"
                android:gravity="right"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="12332313423456.00"
                android:textStyle="bold"
                android:maxLines="1"
                android:inputType="number"
                android:background="@null"
                android:textSize="28sp"
                android:textColor="@color/black_1"/>

        </LinearLayout>

    </LinearLayout>


    <View
        android:background="@color/common_bg"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_account_flow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_marginBottom="206dp"
        android:id="@+id/ll_account_flow_bottom"
        android:background="#fafafa"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <!--首次还款日-->
        <TextView
            android:background="@drawable/xshape_account_flow_bg"
            android:text="首次还款日"
            android:textColor="@color/black_2"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--还款周期-->
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/xshape_account_flow_bg"
            android:text="还款周期"
            android:textColor="@color/black_2"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ll_account_flow_remark"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/xshape_account_flow_edit_mark_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/x_account_flow_edit_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black_2"
                android:textSize="13sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



