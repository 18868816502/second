<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="工具"
            android:textColor="@color/black_1"
            android:textSize="17dp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_main_r18"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical">

            <android.support.v4.widget.Space
                android:layout_width="27dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_month_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:text="10月待还(元)" />

            <ImageView
                android:id="@+id/iv_bill_visible"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_eye_open" />
        </LinearLayout>

        <com.beiwo.qnejqaz.tang.widget.CustomNumTextView
            android:id="@+id/tv_bill_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:textColor="@color/white"
            android:textSize="44dp"
            tools:text="8,350.16" />

        <TextView
            android:id="@+id/tv_bill_detail"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_stroke_r14"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="-3dp"
        android:background="@mipmap/bg_zai">

        <com.beiwo.qnejqaz.loan.DrawableCenterTextView
            android:id="@+id/fl_add_bill_wrap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_bill_left"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="记一笔账单"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line_color" />

        <com.beiwo.qnejqaz.loan.DrawableCenterTextView
            android:id="@+id/fl_credit_wrap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_credit_left"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="导入信用卡"
            android:textColor="@color/black_1"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="常用工具"
        android:textColor="@color/black_1"
        android:textSize="17dp" />

    <com.beiwo.qnejqaz.view.CardLayoutBar
        android:id="@+id/clb_credit_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_down_Visible="true"
        app:left_down_color="@color/black_2"
        app:left_down_style="true"
        app:left_down_text="快速、安全、准确..."
        app:left_down_textSize="11dp"
        app:left_image="@mipmap/ic_credit"
        app:left_image_Visible="true"
        app:left_textView_color="@color/color_primary_black"
        app:left_textView_remark_Visible="false"
        app:left_textView_style="true"
        app:left_textView_text="信用查询"
        app:left_textView_textSize="15dp"
        app:right_textView1_Visible="true"
        app:right_textView1_color="#ff5240"
        app:right_textView1_textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />

    <com.beiwo.qnejqaz.view.CardLayoutBar
        android:id="@+id/clb_interest_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_down_Visible="true"
        app:left_down_color="@color/black_2"
        app:left_down_style="true"
        app:left_down_text="一键帮你算清每月还款"
        app:left_down_textSize="11dp"
        app:left_image="@mipmap/ic_house_interest"
        app:left_image_Visible="true"
        app:left_textView_color="@color/color_primary_black"
        app:left_textView_style="true"
        app:left_textView_text="房贷计算器"
        app:left_textView_textSize="15sp"
        app:right_textView1_Visible="true"
        app:right_textView1_color="#FF5240"
        app:right_textView1_textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color" />

    <com.beiwo.qnejqaz.view.CardLayoutBar
        android:id="@+id/clb_ticket_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_down_Visible="true"
        app:left_down_color="@color/black_2"
        app:left_down_style="true"
        app:left_down_text="发票再多也不怕"
        app:left_down_textSize="11dp"
        app:left_image="@mipmap/ic_ticket"
        app:left_image_Visible="true"
        app:left_textView_color="@color/color_primary_black"
        app:left_textView_style="true"
        app:left_textView_text="发票助手"
        app:left_textView_textSize="15sp"
        app:right_textView1_Visible="true"
        app:right_textView1_color="#ff5240"
        app:right_textView1_textSize="12sp" />
</LinearLayout>