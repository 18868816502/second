<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp88"
    android:layout_height="@dimen/dp88"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/dp81"
        android:layout_height="@dimen/dp81"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@drawable/push_small"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/dp22"
        android:layout_height="@dimen/dp22"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/debt_channel_search_clear"/>

</android.support.constraint.ConstraintLayout>