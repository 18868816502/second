<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_month_pay_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="月供(元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_sum_interest_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="利息总额(万元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorBackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_sum_payback_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8924.06"
                android:textSize="18sp"
                android:textColor="@color/black_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="还款总额(万元)"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/pickerview_cancle"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_LoanSum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款总额:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_LoanSum_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_CommPaySum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商业还款:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_LoanSum_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_CommPaySum_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_LoanSum_Number_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_HAFPaySum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公积金还款:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_CommPaySum_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_HAFPaySum_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_CommPaySum_Number_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_PaySum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款总额:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_HAFPaySum_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_PaySum_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_HAFPaySum_Number_TextView"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_Month_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款月数:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_Month_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_CommInterest_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商业利息:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_Month_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_CommInterest_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_Month_Number_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_HAFInterest_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公积金利息:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_CommInterest_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_HAFInterest_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_CommInterest_Number_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_Interest_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利息总额:"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_HAFInterest_TextView"/>

            <TextView
                android:id="@+id/ViewPager_CapitalInterestCombination_Interest_Number_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ViewPager_CapitalInterestCombination_HAFInterest_Number_TextView"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorBackground"/>

    <include layout="@layout/item_loan_result_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <com.beihui.market.view.dialog.LoanListView
        android:id="@+id/CapitalInterestCombination_ListOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.beihui.market.view.dialog.LoanListView>
</LinearLayout>