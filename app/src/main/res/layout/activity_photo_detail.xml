<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/black">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/bgaBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@color/transparent"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_isNumberIndicator="true"
        app:banner_numberIndicatorTextSize="@dimen/sp16"
        app:banner_numberIndicatorBackground="@color/transparent"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:id="@+id/back_container"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp15"
            android:src="@drawable/back_white"/>
    </LinearLayout>

</RelativeLayout>