<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_goods_yx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp20"
        android:text="产品印象"
        android:textColor="@color/black_1"
        android:textSize="@dimen/dp12" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tag_flow_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginTop="@dimen/dp15"
        app:max_select="-1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp160"
        android:layout_marginLeft="@dimen/dp35"
        android:layout_marginRight="@dimen/dp35"
        android:layout_marginTop="@dimen/dp20">

        <EditText
            android:id="@+id/et_goods_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_et_goods_comment_bg"
            android:gravity="top|left"
            android:hint="请写下您的评价..."
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="@dimen/dp11"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:maxLength="200"
            android:text="67"
            android:textColor="#d3d5d5"
            android:textSize="@dimen/dp11" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp35"
        android:layout_marginRight="@dimen/dp35"
        android:layout_marginTop="@dimen/dp20" />

    <TextView
        android:id="@+id/tv_evaluate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginBottom="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp35"
        android:layout_marginRight="@dimen/dp35"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/shape_btn_goods_evaluate"
        android:gravity="center"
        android:text="发布评价"
        android:textColor="@color/white"
        android:textSize="@dimen/dp17" />
</LinearLayout>