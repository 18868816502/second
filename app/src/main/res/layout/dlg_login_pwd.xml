<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_white_r8"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录之后可以为您提供更多服务哦~"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <com.beiwo.klyjaz.view.ClearEditText
            android:id="@+id/cet_phone"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_f5f5f5_r22"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="18dp"
            android:paddingRight="8dp"
            android:textColor="@color/black_1"
            android:textColorHint="#bdbebf"
            android:textSize="15dp" />

        <com.beiwo.klyjaz.view.ClearEditText
            android:id="@+id/cet_password"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_f5f5f5_r22"
            android:hint="请输入密码"
            android:inputType="number"
            android:paddingLeft="18dp"
            android:paddingRight="8dp"
            android:textColor="@color/black_1"
            android:textColorHint="#bdbebf"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_login_box"
            android:enabled="false"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="逛逛再说？"
            android:textColor="#cacbcc"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>