<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/tab_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_ac_main_notice_root"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:background="@drawable/xshape_tab_account_bg"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--图标-->
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/bill_notice_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.beihui.market.view.MarqueeTextView
            android:id="@+id/tv_tab_account_notice"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp" />

        <!--图标-->
        <ImageView
            android:id="@+id/iv_ac_main_notice_cross"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:src="@drawable/bill_close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/navigation_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" />


        <com.beihui.market.view.BottomNavigationBar
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tab_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/tab_account_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:src="@drawable/tab_account" />

                <TextView
                    android:id="@+id/tab_account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_account_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="@string/tab_account"
                    android:textColor="@color/select_blue_grey"
                    android:textSize="12sp" />

            </RelativeLayout>

            <!--<RelativeLayout-->
                <!--android:id="@+id/tab_home"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:padding="3dp">-->

                <!--<ImageView-->
                    <!--android:id="@+id/tab_home_icon"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:focusable="false"-->
                    <!--android:src="@drawable/tab_loan" />-->

                <!--<TextView-->
                    <!--android:id="@+id/tab_home_text"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/tab_home_icon"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginTop="3dp"-->
                    <!--android:text="借款"-->
                    <!--android:textColor="@color/select_blue_grey"-->
                    <!--android:textSize="12sp" />-->

            <!--</RelativeLayout>-->

            <RelativeLayout
                android:id="@+id/tab_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/tab_news_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:src="@drawable/tab_news" />

                <TextView
                    android:id="@+id/tab_news_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_news_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="@string/tab_news"
                    android:textColor="@color/select_blue_grey"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/tab_mine_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:src="@drawable/tab_mine" />

                <TextView
                    android:id="@+id/tab_mine_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_mine_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="@string/tab_mine"
                    android:textColor="@color/select_blue_grey"
                    android:textSize="12sp" />
            </RelativeLayout>

        </com.beihui.market.view.BottomNavigationBar>

    </FrameLayout>


</LinearLayout>
