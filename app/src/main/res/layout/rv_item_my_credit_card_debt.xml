<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:background="@android:color/white">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <com.beihui.market.view.CircleImageView
                    android:id="@+id/bank_logo"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    app:civ_border_color="@color/line"
                    app:civ_border_width="0.5dp"
                    tools:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:textColor="@color/black_1"
                    android:textSize="15sp"
                    tools:text="广发银行" />

                <TextView
                    android:id="@+id/bank_card_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black_2"
                    android:textSize="14sp"
                    tools:text="8888" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/bank_card_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_2"
                    android:layout_marginRight="30dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/home_forward"
                    android:textSize="14sp"
                    tools:text="8888" />
            </LinearLayout>

            <FrameLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="26dp"
                android:paddingLeft="56dp"
                android:paddingRight="56dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:textSize="15sp"
                        tools:text="每月23日" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="账单日"
                        android:textColor="@color/black_2"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_1"
                        android:textSize="15sp"
                        tools:text="每月23日" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="还款日"
                        android:textColor="@color/black_2"
                        android:textSize="11sp" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:visibility="invisible"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="#909298"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="#808080">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/show_hide" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="首页显示"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </FrameLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>