<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="我的钱包"
            android:textColor="@color/black_1"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_withdraw_record"
            android:layout_width="66dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="提现记录" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/wallet_balance_wrap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_wallet_balance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/ic_wallet_balance"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="我的余额"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <com.beihui.market.tang.widget.CustomNumTextView
            android:id="@+id/tv_amount_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:gravity="center"
            tools:text="680.00"
            android:textColor="@color/refresh_one"
            android:textSize="24dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/recycler_head"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="可提现额度"
        android:textColor="@color/black_1"
        android:textSize="15dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_withdraw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_btn_withdraw"
        android:gravity="center"
        android:text="申请提现"
        android:textColor="@color/white"
        android:textSize="17dp" />
</LinearLayout>