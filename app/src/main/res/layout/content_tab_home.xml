<?xml version="1.0" encoding="utf-8"?>
<com.beihui.market.view.WatchableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_banner_height" />

        <LinearLayout
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/banner">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/loan_top_line" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_grey" />

            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/marquee_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:mvAnimDuration="1000"
                app:mvInterval="3000"
                app:mvSingleLine="true"
                app:mvTextColor="#424251"
                app:mvTextSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/hot_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/headline">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="13dp"
                android:drawableLeft="@drawable/home_left_label"
                android:drawablePadding="7dp"
                android:text="热门产品"
                android:textColor="@color/black_1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/refresh_hot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/home_change_icon_animation"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="换一换"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hot_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="17dp"
            app:layout_constraintTop_toBottomOf="@id/hot_head" />

        <TextView
            android:id="@+id/choice_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/home_left_label"
            android:drawablePadding="7dp"
            android:paddingBottom="13dp"
            android:paddingLeft="14dp"
            android:paddingTop="13dp"
            android:text="精选产品"
            android:textColor="@color/black_1"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/hot_recycler_view" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/choice_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="17dp"
            android:paddingLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/choice_head" />


        <FrameLayout
            android:id="@+id/quality_test"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/home_test_bg"
            app:layout_constraintTop_toBottomOf="@id/choice_recycler_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:src="@drawable/home_privilege"
                    tools:ignore="RtlHardcoded" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我能借多少"
                        android:textColor="#424251"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="测测我的身价"
                        android:textColor="#909298"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/right_icon"
                    android:gravity="right"
                    android:text="一分钟测算身价"
                    android:textColor="#909298"
                    android:textSize="12sp" />

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/loan_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/home_left_label"
            android:drawablePadding="7dp"
            android:paddingBottom="13dp"
            android:paddingLeft="14dp"
            android:paddingTop="13dp"
            android:text="借款攻略"
            android:textColor="@color/black_1"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/quality_test" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/loan_news_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp" />

    </android.support.constraint.ConstraintLayout>
</com.beihui.market.view.WatchableScrollView>