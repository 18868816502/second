<?xml version="1.0" encoding="utf-8"?>
<!--@author xhb 账单模块头布局-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/x_tab_account_toolbar_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fg_tab_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!--近30天未还-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_last_one_month_wait_pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="近30天待还(元)"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_last_one_month_wait_pay_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共0笔"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_last_one_month_wait_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="暂无账单"
                android:textColor="@color/white"
                android:textSize="30sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_tab_account_header_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/xshape_tab_account_header_black_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/switchover_icon" />

                <TextView
                    android:id="@+id/tv_tab_account_header_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待还"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ac_main_notice_root"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/xshape_tab_account_bg"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.beihui.market.view.MarqueeTextView
            android:id="@+id/tv_tab_account_notice"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:gravity="center_vertical"
            android:textColor="#8C1003"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />

        <!--图标-->
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_ac_main_notice_cross"
            android:src="@drawable/bill_close_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>