<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height">

        <ImageView
            android:id="@+id/iv_ac_account_flow_type_back"
            android:layout_gravity="left"
            android:layout_marginRight="15dp"
            android:src="@mipmap/btn_back_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_ac_account_flow_type_confirm"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/x_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加类别"
            android:textColor="#ff424251"
            android:textSize="17sp" />

    </android.support.v7.widget.Toolbar>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_ac_account_flow_type_icon"
            android:src="@drawable/x_account_flow_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_ac_account_flow_type_name"
            android:layout_gravity="center_vertical"
            android:hint="请输入类别名称"
            android:textColor="@color/black_1"
            android:textColorHint="@color/black_2"
            android:textSize="15sp"
            android:background="@null"
            android:maxLength="6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/common_bg"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="8dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ac_account_flow_type"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <LinearLayout
        android:id="@+id/ll_ac_account_flow_type_bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>

</LinearLayout>