<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="22dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/th"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black_2"
        android:textSize="12sp"
        tools:text="1" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/th"
        android:gravity="center_vertical"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:textColor="@color/black_1"
        android:textSize="12sp"
        tools:text="2017-08-08" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@id/date"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/date"
        android:layout_gravity="bottom"
        android:background="@color/line" />

    <ImageView
        android:id="@+id/date_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/date"
        android:paddingLeft="15dp"
        android:paddingRight="6dp"
        android:src="@drawable/debt_confirm_pay_plan_edit" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="待还"
        android:textColor="@color/black_2"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/amount_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/status"
        android:paddingLeft="9dp"
        android:paddingRight="6dp"
        android:src="@drawable/debt_confirm_pay_plan_edit" />


    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:layout_toLeftOf="@id/amount_edit"
        android:gravity="center_vertical"
        android:textColor="@color/black_1"
        android:textSize="12sp"
        tools:text="1100.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@id/amount"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/amount"
        android:background="@color/line" />

</RelativeLayout>