<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:background="@drawable/x_account_info_header_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/title"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="账单详情" />


        <ImageView
            android:id="@+id/iv_debt_info_edit_right_button"
            style="@style/ToolBarIconStyle"
            android:layout_gravity="right|top"
            android:layout_marginRight="12dp"
            android:src="@drawable/x_normal_white_spot" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50.5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/sticky_header_container"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </FrameLayout>

    <View
        android:id="@+id/ll_debt_info_foot_root_line"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/ll_debt_info_foot_root"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rv_debt_info_foot_set_pay"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:textColor="@color/black_1"
            android:textSize="15sp" />


        <View
            android:id="@+id/tv_debt_info_foot_middle_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line" />


        <TextView
            android:id="@+id/rv_debt_info_foot_pay_part"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:textColor="@color/black_1"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>