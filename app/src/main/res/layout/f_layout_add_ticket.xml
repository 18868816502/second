<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="添加发票"
            android:textColor="@color/black_1"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ticket_save"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/refresh_one"
            android:textSize="14dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <com.beihui.market.view.ClearEditText
            android:id="@+id/cet_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="(必填)"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black_1"
            android:textColorHint="#d3d4d5"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="税号"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <com.beihui.market.view.ClearEditText
            android:id="@+id/cet_tax_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="right"
            android:hint="10-20位"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black_1"
            android:textColorHint="#d3d4d5"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司地址"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <com.beihui.market.view.ClearEditText
            android:id="@+id/cet_company_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入公司地址"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black_1"
            android:textColorHint="#d3d4d5"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话号码"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <com.beihui.market.view.ClearEditText
            android:id="@+id/cet_phone_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入联系电话"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/black_1"
            android:textColorHint="#d3d4d5"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户银行"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <com.beihui.market.view.ClearEditText
            android:id="@+id/cet_bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入开户银行"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black_1"
            android:textColorHint="#d3d4d5"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行账户"
            android:textColor="@color/black_1"
            android:textSize="15dp" />

        <com.beihui.market.view.ClearEditText
            android:id="@+id/cet_bank_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入银行账户"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black_1"
            android:textColorHint="#d3d4d5"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>