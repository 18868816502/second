<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/article_item">

    <com.beiwo.klyjaz.view.CircleImageView
        android:id="@+id/iv_author_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/mine_icon_head"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_author_avatar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="@dimen/dp15"
        tools:text="西村小飞"
        android:textSize="@dimen/sp13"
        android:textColor="@color/black_1"
        android:layout_marginStart="6dp" />

    <TextView
        android:id="@+id/tv_author_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_author_avatar"
        app:layout_constraintLeft_toLeftOf="@id/tv_author_name"
        android:layout_marginTop="@dimen/dp2"
        android:gravity="center"
        tools:text="刚刚"
        android:textColor="@color/black_2"
        android:textSize="@dimen/sp10"/>

    <LinearLayout
        android:id="@+id/ll_article_content"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/dp18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_publish_time"
        android:orientation="horizontal"
        android:background="@drawable/shape_personal_center_article">
        <TextView
            android:id="@+id/tv_article_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:gravity="center|left"
            tools:text="论坛获取积分、禁言、打赏、提问规则-贷款论坛获取"
            android:textSize="@dimen/sp17"
            android:maxEms="10"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/black_1"/>
        <ImageView
            android:id="@+id/iv_author_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/push"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp19"
        app:layout_constraintTop_toBottomOf="@+id/ll_article_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:maxEms="20"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/sp17"
        android:textColor="@color/black_1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_article_descripe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="按时发局手动阀聂亚我阿up哦一发哦哦我阿US噢范增圣斗士已经这样了"
        android:textColor="@color/black_2"
        android:maxEms="80"
        android:ellipsize="end"
        android:textSize="@dimen/sp11"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/ll_article_praise_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_article_descripe"
        android:orientation="horizontal"
        android:padding="@dimen/dp2"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp15">
        <ImageView
            android:id="@+id/iv_priase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_social_personal_praise_unselected"/>
        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="赞"
            android:textSize="@dimen/sp11"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_article_comment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginTop="@dimen/dp24"
        app:layout_constraintTop_toBottomOf="@+id/tv_article_descripe"
        app:layout_constraintLeft_toRightOf="@+id/ll_article_praise_container"
        android:orientation="horizontal"
        android:padding="@dimen/dp2"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp24">
        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_social_comment"/>
        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="12"
            android:textSize="@dimen/sp11"/>
    </LinearLayout>
    
    <View
        android:layout_width="368dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_article_comment_container"
        android:layout_marginTop="@dimen/dp15"
        android:background="@color/colorBackground"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>