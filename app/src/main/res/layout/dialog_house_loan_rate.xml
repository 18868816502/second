<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_rate_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:text="选择常用利率"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@color/white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rate_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_rate_title"
        android:background="@color/colorBackground"/>

    <TextView
        android:id="@+id/tv_rate_customer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:text="或者自定义利率"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@color/white"
        android:visibility="gone"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_customer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义利率(%):"
            android:textSize="14sp"
            android:textColor="@color/black_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/et_rate"
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_customer_title"
            android:layout_marginLeft="10dp"
            android:hint="请输入自定义利率"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:textColor="@color/black_1"
            android:gravity="left|center_vertical"
            android:background="@color/c_fff5f5f5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toRightOf="@id/et_rate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:text="确定"
            android:gravity="center"
            android:background="@drawable/shape_house_loan_rate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="15dp"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>