<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 一个层叠效果,通过阴影表现出立体效果 -->
    <item
        android:bottom="0.2dp"
        android:left="0.1dp"
        android:right="0.1dp"
        android:top="0.2dp"><!-- 阴影效果 -->
        <shape android:shape="rectangle">
            <solid android:color="#ededed" /><!-- 阴影的颜色 -->
            <corners android:radius="3dp" /><!-- 圆角 -->
        </shape>
    </item>
    <item
        android:bottom="0.8dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.3dp"><!-- 阴影效果 -->
        <shape android:shape="rectangle">
            <solid android:color="#eeeeee" /><!-- 阴影的颜色 -->
            <corners android:radius="3.5dp" /><!-- 圆角 -->
        </shape>
    </item>
    <item
        android:bottom="1.5dp"
        android:left="0.8dp"
        android:right="0.8dp"
        android:top="0.3dp"><!-- 阴影效果 -->
        <shape android:shape="rectangle">
            <solid android:color="#f1f1f1" /><!-- 阴影的颜色 -->
            <corners android:radius="4.5dp" /><!-- 圆角 -->
        </shape>
    </item>
    <item
        android:bottom="3.0dp"
        android:left="1.0dp"
        android:right="1.0dp"
        android:top="0.5dp"><!-- 距底部2dp，漏出上面那个item，使其可以显现出阴影 -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /><!-- item颜色 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>